@using ClimbingGym.Core.Models
@model IEnumerable<SectorsListViewModel>
@{
	ViewData["Title"] = "Courses";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Courses</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                    </div>
                </div>
            </div>
            
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sector</th>
                            <th>Routes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sector in Model)
                        {
                            <tr>
                                <td>@sector.Name</td>
                                <td>
                                    <a asp-area="" asp-action="RoutesList" asp-controller="route" asp-route-id="@sector.SectorId" class="btn btn-block btn-outline-info btn-xs">Routes List</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>