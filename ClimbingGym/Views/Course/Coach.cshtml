@using ClimbingGym.Core.Models.Courses
@model CoachViewModel
@{
	ViewData["Title"] = "Coach";
}
<section class="content">

	<div class="card">
		<div class="card-header">
			<h3 class="card-title">@ViewData["Title"]</h3>
		</div>
		<div class="card-body">
			<div class="row">

				<div class="row">
					<div class="col-12">
						<div class="post">
							<div class="user-block">
								<h4>@Model.Name</h4>
								<span class="description">Years of experience: @Model.YearsOfExperience</span>
							</div>

							<p>
								Introduction:
								@Model.Introduction
							</p>
							<p>
								<a asp-area="" asp-action="CoachCourses" asp-controller="course" asp-route-id="@Model.Id" class="link-black text-sm"> See all courses of this coach</a>
							</p>
						</div>
					</div>
				</div>
				</>
			</div>
		</div>

	</div>

</section>