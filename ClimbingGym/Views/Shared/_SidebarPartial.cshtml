@using ClimbingGym.Infrastructure.Data.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
	<li class="nav-item">
		<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
			<i class="fa-solid fa-arrow-right-from-bracket"></i>
			<button type="submit" class="nav-link btn btn-link text-dark">Log Out</button>
		</form>
	</li>

	
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/User/ManageUser" asp-route-returnUrl="@Url.Action("ManageUser", new { area = "" })" method="post">
				<i class="fa-solid fa-lock"></i>
				<button type="submit" class="nav-link btn btn-link text-dark">Admin panel</button>
			</form>
		</li>
	
}

else
{
	<li class="nav-item">
		<form class="form-inline" asp-area="Admin" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Login", new { area = "" })" method="post">
			<i class="fa-solid fa-arrow-right-to-bracket"></i>
			<button type="submit" class="nav-link btn btn-link text-dark">Log in</button>
		</form>
	</li>
	<li class="nav-item">
		<form class="form-inline" asp-area="Admin" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Register", new { area = "" })" method="post">
			<i class="fa-solid fa-registered"></i>
			<button type="submit" class="nav-link btn btn-link text-dark">Register</button>
		</form>
	</li>
}



